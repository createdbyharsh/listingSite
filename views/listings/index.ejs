<% layout("/layouts/boilerplate.ejs")%>

<div class="row row-cols-lg-4 row-cols-adjust">
  <% allListings.map((x) => { %>
  <a
    href="/listings/<%=x.id%>"
    class="listing-link"
    style="text-decoration: none"
  >
    <div class="card" style="width: 18rem">
      <img
        src="<%= x.image.url %>"
        class="card-img-top listing-index-img"
        alt="listing-img"
      />
      <div class="card-img-overlay"></div>
      <div class="listing-card-body">
        <p class="listing-card-text">
          <b><%= x.title %></b> <br />
          &#8377; <%= (typeof x.price === "number" ?
          x.price.toLocaleString("en-IN") : "N/A") %>/ night
          <i class="tax-info">&nbsp; &nbsp; + 18% GST</i>
        </p>
      </div>
    </div>
  </a>

  <% }) %>
</div>
