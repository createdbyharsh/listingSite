<% layout("/layouts/boilerplate.ejs")%>

<div class="row mt-3">
  <h3 class="col-6 offset-5">Login on Airbnb</h3>
  <div class="col-6 offset-3">
    <form action="/login" method="Post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label class="form-label">Username</label>
        <input
          type="text"
          name="username"
          class="form-control"
          id="username"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label">Password</label>
        <input
          type="password"
          name="password"
          class="form-control"
          id="password"
          required
        />
      </div>
      <button type="submit" class="btn btn-dark">Login</button>
      <a href="/signup" class="btn">New User? Register</a>
    </form>
  </div>
</div>
